<Page x:Class="WpfApp.Views.SensorsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      xmlns:vm="clr-namespace:ViewModels;assembly=ViewModels"
      xmlns:uc="clr-namespace:WpfApp.CustomControls"
      xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
      xmlns:b="clr-namespace:WpfApp.Behaviors"
      DataContext="{Binding SensorsViewModel, Source={StaticResource Locator}}"
      mc:Ignorable="d" 
      d:DesignHeight="550" d:DesignWidth="800"
      Title="SensorsView">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>


        <ListBox ItemsSource="{Binding Sensors}" SelectedItem="{Binding SelectedSensor}" >

            <ListBox.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid Columns="2" />
                    <!--<StackPanel />-->
                </ItemsPanelTemplate>
            </ListBox.ItemsPanel>

            <ListBox.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal" Background="DarkGray">
                        <Image Width="48" Height="48" Source="{StaticResource MicrophoneImage}" />
                        <Label Content="{Binding Name}" Width="200" />
                        <Label Content="{Binding IpAddress}" />

                        <!--<TextBlock Text="{Binding X}" />
                        <TextBlock Text="{Binding Y}" />-->

                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{} (x:{0} y:{1})">
                                    <Binding Path="X" />
                                    <Binding Path="Y" />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>


                        <Grid Margin="10 0 0 0">

                            <Ellipse >
                                <Ellipse.Style>
                                    <Style TargetType="Ellipse">
                                        <Setter Property="Width" Value="35" />
                                        <Setter Property="Height" Value="35" />
                                        <Setter Property="Fill" Value="Green" />

                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding IsOverLimit}" Value="True">
                                                <Setter Property="Fill" Value="Red" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Ellipse.Style>
                                
                            </Ellipse>

                            <TextBlock Text="{Binding Value}"
                                       Foreground="White"
                                       HorizontalAlignment="Center" 
                                       VerticalAlignment="Center" />
                            
                        </Grid>

                        

                    </StackPanel>
                </DataTemplate>
            </ListBox.ItemTemplate>

        </ListBox>

        <StackPanel Grid.Column="1" DataContext="{Binding SelectedSensor}" >
            <Label>Name</Label>
            <TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />

            <Label>FullName</Label>
            <TextBox IsReadOnly="True" Text="{Binding FullName, Mode=OneWay}" />

            <Label>Ip</Label>
            <TextBox Text="{Binding IpAddress}" />

            <Label>X</Label>
            <TextBox Text="{Binding X, UpdateSourceTrigger=PropertyChanged, Mode=OneWay}" />
            <Slider Value="{Binding X}"
                    Minimum="0"
                    Maximum="300"
                    TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    />

            <Label>Y</Label>
            <TextBox Text="{Binding Y, UpdateSourceTrigger=PropertyChanged, Mode=OneWayToSource}" />
            <Slider Value="{Binding Y}"
                     Minimum="0"
                     Maximum="300"
                     TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    />

            <Label>Temperature</Label>

            <Slider Value="{Binding Value}"
                     Minimum="0"
                     Maximum="200"
                     TickFrequency="1"
                    IsSnapToTickEnabled="True"
                    />



            <Grid >
                <Canvas Width="200" Height="200" Background="White"
                        MouseMove="Canvas_MouseMove">

                    <i:Interaction.Behaviors>
                        <b:MouseCoordinateBehavior X="{Binding X}" Y="{Binding Y}" />
                    </i:Interaction.Behaviors>

                    <Line X1="0" Y1="100" 
                          X2="200" Y2="100" 
                          StrokeThickness="1"
                          Stroke="Black"
                      />

                    <Line X1="100" Y1="0"
                          X2="100" Y2="200"
                          StrokeThickness="1"
                            Stroke="Black"
                          />

                </Canvas>
            </Grid>


        </StackPanel>
    </Grid>
</Page>
