<Page x:Class="WpfApp.Views.RegionsView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfApp.Views"
      DataContext="{Binding Source={StaticResource Locator}, Path=RegionsViewModel}"
      xmlns:uc="clr-namespace:WpfApp.CustomControls"
      xmlns:c="clr-namespace:WpfApp.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="RegionsView">

    <Grid>

     
            <ListBox ItemsSource="{Binding Regions}">
                <ListBox.ItemTemplate>
                    <DataTemplate >
                        <StackPanel>
                            <Label Content="{Binding Name}" />

                            <uc:MapSensors ItemsSource="{Binding Sensors}"
                                           Width="400"
                                           Height="200"
                                           />

                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>



    </Grid>
</Page>
