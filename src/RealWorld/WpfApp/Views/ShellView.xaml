<Window x:Class="WpfApp.ShellView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:local="clr-namespace:WpfApp"
        xmlns:me="clr-namespace:WpfApp.MarkupExtensions"
        xmlns:c="clr-namespace:WpfApp.Controls"
        DataContext="{Binding Source={StaticResource Locator}, Path=ShellViewModel}"
        mc:Ignorable="d"
        Title="ShellView" Height="450" Width="800">


    <Grid>
           
        <DockPanel>
            <DockPanel DockPanel.Dock="Top">

                <Menu>
                    <MenuItem Header="File">
                        <MenuItem Header="Map" Command="{Binding ShowMapCommand}" />
                        <MenuItem Header="Sensors" Command="{Binding ShowSensorsCommand}"/>
                    </MenuItem>
                </Menu>
                
                <Button Command="{Binding ShowMapCommand}" >Map</Button>
                <Button Command="{Binding ShowSensorsCommand}">Sensors</Button>
                <Button Command="{Binding ShowEndpointsCommand}">Endpoints</Button>
                <Button Style="{StaticResource DangerButtonStyle}">Remove</Button>


                <c:FeatureFlagView Feature="EXPORT">
                    <Button Content="Export">
                        <Button.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="Export to PDF"/>
                                <MenuItem Header="Export to docx"/>
                            </ContextMenu>
                        </Button.ContextMenu>
                    </Button>
                </c:FeatureFlagView>

                <TextBlock Text="{me:Hello Text='John Smith'}" />
                
                <Border Width="50" BorderBrush="Black" BorderThickness="1" Margin="5" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="MouseEnter">
                            <i:InvokeCommandAction Command="{Binding ShowLogoCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </Border>

                <Border BorderBrush="Green" BorderThickness="1" Margin="5"
                        MouseEnter="{me:EventToCommand CommandPath=ShowLogoCommand}"
                        />


            </DockPanel>

            <Frame x:Name="MainFrame" Source="SensorsView.xaml" />
        </DockPanel>


        <ProgressBar Height="50" Width="150" Value="50" IsIndeterminate="True" Visibility="Hidden"  />

        


    </Grid>

</Window>
