<Window x:Class="WpfApp.GridView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="GridView" Height="450" Width="800">
    
    <Grid>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="2*" />
        </Grid.RowDefinitions>


        <Button Width="200" Height="100" Background="Blue" Panel.ZIndex="0"
                Grid.ColumnSpan="3"
                >Hello 1</Button>
        
        <Button Width="150" Height="200" Background="Green" Panel.ZIndex="2" 
                Grid.Column="1" Grid.Row="1"                
                >Hello 2</Button>
        
        <Button Width="250" Height="50" Background="Red" Panel.ZIndex="1"                
                Grid.Column="2"
                Grid.RowSpan="2"
                >Hello 3</Button>
    </Grid>
</Window>
