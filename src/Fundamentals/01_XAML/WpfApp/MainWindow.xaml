<Window x:Class="WpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>

            <SolidColorBrush x:Key="MyForegroundBrush">
                Green
            </SolidColorBrush>

            <LinearGradientBrush x:Key="MyBackgroundBrush">
                <LinearGradientBrush.GradientStops>
                    <GradientStop Color="Yellow"/>
                    <GradientStop Color="Green" Offset="0.7" />
                    <GradientStop Color="Black" Offset="1" />
                </LinearGradientBrush.GradientStops>
            </LinearGradientBrush>

            <RadialGradientBrush x:Key="MyBackgroundRadialBrush">
                <RadialGradientBrush.GradientStops>
                    <GradientStop Color="Yellow"/>
                    <GradientStop Color="Green" Offset="0.7" />
                </RadialGradientBrush.GradientStops>
            </RadialGradientBrush>
        </ResourceDictionary>
    </Window.Resources>

    <StackPanel>


        <Button Foreground="{StaticResource MyForegroundBrush}"
                Background="{StaticResource MyBackgroundRadialBrush}"
                Width="200"
                Height="200"
                >Hello World!</Button>

        <Button Content="Hello World!"
                Background="{StaticResource MyBackgroundBrush}"
                d:Background="Blue"
                />

        <Button Foreground="{StaticResource MyForegroundBrush}">
            <Button.Content>
                Hello World!
            </Button.Content>

            <Button.Background>
                <LinearGradientBrush>
                    <LinearGradientBrush.GradientStops>
                        <GradientStop Color="Yellow"/>
                        <GradientStop Color="Green" Offset="0.7" />
                        <GradientStop Color="Black" Offset="1" />
                    </LinearGradientBrush.GradientStops>
                </LinearGradientBrush>

            </Button.Background>
        </Button>


    </StackPanel>


</Window>
